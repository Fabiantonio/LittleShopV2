{
  "version": 2,
  "builds": [
    {
      "src": "LittleShop/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media-files/(.*)",
      "dest": "/media-files/$1"
    },
    {
      "src": "/(.*)",
      "dest": "LittleShop/wsgi.py"
    }
  ]
}