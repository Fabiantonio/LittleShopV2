{
  "version": 2,
  "builds": [
    {
      "src": "LittleShop/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "buildCommand": "chmod +x vercel.sh && ./vercel.sh",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media-files/(.*)",
      "dest": "/media-files/$1"
    },
    {
      "src": "/(.*)",
      "dest": "LittleShop/wsgi.py"
    }
  ]
}